#: import SlideTransition kivy.uix.screenmanager.SlideTransition
##
ScreenManager:
    transition: SlideTransition(direction='down')
    HomePage:
    DietPage:
    ExercisePage:
    MedicationPage:
    GoalsPage:
    LifePage:
    SettingsPage:
    PhysicalActivities:
    ExerciseClasses:
    StepTrack:
    CholesterolGoals:

<CustButton@Button>:
    font_size: sp(32)
    font_name: 'images/cambriab.ttf'
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'button_background.png'
    background_color: .502, .651, .671, 1
    size_hint: .6, .15

<CustLabel@Label>:
    font_size: sp(32)
    font_name: 'images/cambriab.ttf'
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'button_background.png'
    background_color: .502, .651, .671, 1
    size_hint: .6, .15

<CustTextInput@TextInput>:
    background_color: 1, 1, 1, 1
    font_name: 'images/cambriab.ttf'

<CustSpinner@Spinner>:
    background_color: 1, 1, 1, 1

<CustCheckBox@CheckBox>:
    allow_no_selection: False

<HomePage>:
    name: "home"
    FloatLayout:
        CustButton:
            text: "Diet"
            pos_hint: {"center_x": .5, "center_y": .9}
            on_release:
                app.root.current = "diet"
                app.root.transition = SlideTransition(direction='up')
            Image:
                pos: self.parent.pos[0] + sp(250), self.parent.pos[1] + sp(60)
                size: 80,80
                source: 'images/apple.png'
        CustButton:
            text: "Exercise"
            pos_hint: {"center_x": .5, "center_y": .7}
            on_release:
                app.root.current = "exer"
                app.root.transition = SlideTransition(direction='up')
            Image:
                pos: self.parent.pos[0] + 250, self.parent.pos[1] + 60
                size: 80,80
                source: 'images/exercize.png'
        CustButton:
            text: "Medication"
            #text_size: cm(6), cm(0)
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.root.current = "meds"
                app.root.transition = SlideTransition(direction='up')
            Image:
                pos: self.parent.pos[0] + 250, self.parent.pos[1] + 60
                size: 80,80
                source: 'images/medication.png'
        CustButton:
            text: "Health Goals"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                app.root.current = "goals"
                app.root.transition = SlideTransition(direction='up')
            Image:
                pos: self.parent.pos[0] + 250, self.parent.pos[1] + 60
                size: 80,80
                source: 'images/checkmark.png'
        CustButton:
            text: "Lifestyle"
            pos_hint: {"center_x": .5, "center_y": .1}
            on_release:
                app.root.current = "life"
                app.root.transition = SlideTransition(direction='up')
            Image:
                pos: self.parent.pos[0] + 250, self.parent.pos[1] + 60
                size: 80,80
                source: 'images/lotus.png'
