<StepTrack>:
    name: "step"
    CustLabel:
        font_size: 24
        text: "In order to maintain good health,\n you should walk at least 15 minutes each \nday to prevent cardiovascular disease."
        halign: 'center'
        pos_hint: {"center_x": .5, "center_y": .8}

    CustLabel:
        id: totalT
        font_size: 24
        text: "You have walked " + str(root.grabTime()) +  " minutes today!"
        pos_hint: {"center_x": .5, "center_y": .65}

    CustTextInput:
        id: stepz
        hint_text: 'Enter time walked today (min)'
        pos_hint: {"center_x": .45, "center_y":.55}
        font_size: 25
        size_hint: .75, .055
        multiline: False
        on_text_validate:
            root.dailyWalkTime(stepz.text)
            temp.text = stepz.text
            totalT.text = "You have walked " + str(root.grabTime()) + " minutes today!"
            stepz.text = ""

    CustButton:
        id: ding
        text: "Reset"
        pos_hint: {"center_x": 0.7, "center_y": 0.4}
        size_hint: .3, .1
        on_release:
            root.resetTime()
            totalT.text = "You have walked " + str(root.grabTime()) + " minutes today!"

    CustButton:
        id: temp
        x: 10000
        text: ""

    CustButton:
        id: work
        pos_hint: {"center_x": .90, "center_y": .55}
        size_hint: .1,.0570
        #text: root.grabTime()
        on_release:
            root.dailyWalkTime(stepz.text)
            totalT.text = "You have walked " + str(root.grabTime()) + " minutes today!"
            temp.text = stepz.text
            stepz.text = ""
        Image:
            pos: self.parent.pos
            size: self.parent.size
            source: 'images/check_mark_T.png'

    CustButton:
        text: "Undo"
        size_hint: .3,.1
        pos_hint: {"center_x": 0.30, "center_y": 0.4}
        on_release:
            root.undoTime(temp.text)
            totalT.text = "You have walked " + str(root.grabTime()) + " minutes today!"

    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "home"
            app.root.transition = SlideTransition(direction='down')

<CholesterolGoals>
    name: "cholesterol"
    CustLabel:
        font_size: 28
        text: "In order to lower your cholesterol,\n you should do the following:"
        halign: 'center'
        pos_hint: {"center_x": .5, "center_y": .9}
    CustLabel:
        font_size: 24
        pos_hint: {"center_x": .5, "center_y": .7}
        text: "Believe it or not, some fats are healthier\n than others. Unsaturated fats should\n always take priority over saturated fats.\n Always stay away from trans fats."
        CustLabel:
    CustLabel:
        font_size: 24
        text: "Find time to exercise! Taking a walk\n every now and then or playing\n a sport can really go a long way. "
        halign: 'center'
        pos_hint: {"center_x": .5, "center_y": .5}
    CustLabel:
        font_size: 24
        text: "One of the many benefits of quitting\n smoking is that it will lower your\n cholesterol. If you smoke and have high\n cholesterol, quitting should be\n your priority."
