#: import SlideTransition kivy.uix.screenmanager.SlideTransition
##
ScreenManagement:
    transition: SlideTransition(direction='down')
    HomePage:
    DietPage:
    ExercisePage:
    MedicationPage:
    GoalsPage:
    LifePage:

<CustButton@Button>:
    font_size: 32
    font_name: 'images/cambriab'
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'button_background.png'
    background_color: .502, .651, .671, 1
    size_hint: .6, .15

<HomePage>:
    name: "home"
    FloatLayout:
        CustButton:
            text: "Diet"
            pos_hint: {"center_x": .5, "center_y": .9}
            #Image:
            #    source: 'bagel.png'
            #    pos_hint: {"y": 200, "x": 200}
            on_release:
                app.root.current = "diet"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Exercise"
            pos_hint: {"center_x": .5, "center_y": .7}
            on_release:
                app.root.current = "exer"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Medication"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.root.current = "meds"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Health Goals"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                app.root.current = "goals"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Lifestyle"
            pos_hint: {"center_x": .5, "center_y": .1}
            on_release:
                app.root.current = "life"
                app.root.transition = SlideTransition(direction='up')

<DietPage>:
    name: "diet"
    FloatLayout:
        CustButton:
            text: "Low Sodium"
            pos_hint: {"center_x": .5, "center_y": .7}
            on_release:
                app.root.SodiumDietBrowser()
        CustButton:
            text: "Low Fat"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.root.FatDietBrowser()
        CustButton:
            text: "Diabetic"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                app.root.DiabeticBrowser()
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<ExercisePage>:
    name: "exer"
    FloatLayout:
        CustButton:
            text: "Step Tracker"
            pos_hint: {"center_x": .5, "center_y": .6}
        CustButton:
            text: "Burn Calories"
            pos_hint: {"center_x": .5, "center_y": .3}
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<MedicationPage>:
    name: "meds"
    FloatLayout:
        CustButton:
            text: "Set Reminders"
            font_size: 28
            pos_hint: {"center_x": .5, "center_y":.3}
        CustButton:
            text: "General Information"
            font_size: 28
            pos_hint: {"center_x": .5, "center_y":.6}
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<GoalsPage>:
    name: "goals"
    CustButton:
        text: "Blood Pressure Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.3}
    CustButton:
        text: "Cholesterol Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.5}
    CustButton:
        text: "Cholesterol Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.7}
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<LifePage>:
    name: "life"
    CustButton:
        text: "Stress Management"
        pos_hint: {"center_x": .5, "center_y":.3}
    CustButton:
        text: "Stop Smoking"
        pos_hint: {"center_x": .5, "center_y":.5}
    CustButton:
        text: "Weight Loss"
        pos_hint: {"center_x": .5, "center_y":.7}
    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "home"
            app.root.transition = SlideTransition(direction='down')
