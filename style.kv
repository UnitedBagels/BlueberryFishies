#: import SlideTransition kivy.uix.screenmanager.SlideTransition
##
ScreenManager:
    transition: SlideTransition(direction='down')
    HomePage:
    DietPage:
    ExercisePage:
    MedicationPage:
    GoalsPage:
    LifePage:
    SettingsPage:
    PhysicalActivities:
    ExerciseClasses:
    StepTrack:

<CustButton@Button>:
    font_size: 32
    font_name: 'images/cambriab'
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'button_background.png'
    background_color: .502, .651, .671, 1
    size_hint: .6, .15

<CustLabel@Label>:
    font_size: 32
    font_name: 'images/cambriab'
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'button_background.png'
    background_color: .502, .651, .671, 1
    size_hint: .6, .15

<CustTextInput@TextInput>:
    background_color: 1, 1, 1, 1
    font_name: 'images/cambriab'

<CustSpinner@Spinner>:
    background_color: 1, 1, 1, 1

<CustCheckBox@CheckBox>:
    allow_no_selection: False

<HomePage>:
    name: "home"
    FloatLayout:
        CustButton:
            text: "Diet"
            pos_hint: {"center_x": .5, "center_y": .9}
            #Image:
            #    source: 'bagel.png'
            #    pos_hint: {"y": 200, "x": 200}
            on_release:
                app.root.current = "diet"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Exercise"
            pos_hint: {"center_x": .5, "center_y": .7}
            on_release:
                app.root.current = "exer"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Medication"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                app.root.current = "meds"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Health Goals"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                app.root.current = "goals"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Lifestyle"
            pos_hint: {"center_x": .5, "center_y": .1}
            on_release:
                app.root.current = "life"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "S"
            pos_hint: {"right": 1, "center_y": 0.05}
            size_hint: .1, .1
            on_release:
                app.root.current = "settings"
                app.root.transition = SlideTransition(direction='up')

<DietPage>:
    name: "diet"
    FloatLayout:
        CustButton:
            text: "Low Sodium"
            pos_hint: {"center_x": .5, "center_y": .7}
            on_release:
                root.SodiumDietBrowser()
        CustButton:
            text: "Low Fat"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release:
                root.FatDietBrowser()
        CustButton:
            text: "Diabetic"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                root.DiabeticBrowser()
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<ExercisePage>:
    name: "exer"
    FloatLayout:
        CustButton:
            text: "Step Tracker"
            pos_hint: {"center_x": .5, "center_y": .6}
            on_release:
                app.root.current = "step"
                app.root.transition = SlideTransition(direction='up')
        CustButton:
            text: "Burn Calories"
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                app.root.current = "phys"
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<MedicationPage>:
    name: "meds"
    FloatLayout:
        CustButton:
            text: "Set Reminders"
            font_size: 28
            pos_hint: {"center_x": .5, "center_y":.3}
        CustButton:
            text: "General Information"
            font_size: 28
            pos_hint: {"center_x": .5, "center_y":.6}
            on_release:
                root.MedicineGuide()
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<GoalsPage>:
    name: "goals"
    CustButton:
        text: "Blood Pressure Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.3}
    CustButton:
        text: "Cholesterol Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.5}
    CustButton:
        text: "Cholesterol Goals"
        font_size: 28
        pos_hint: {"center_x": .5, "center_y":.7}
        CustButton:
            text: "Back"
            size_hint: .3,.1
            pos_hint: {"x": 0,"y": 0}
            on_release:
                app.root.current = "home"
                app.root.transition = SlideTransition(direction='down')

<LifePage>:
    name: "life"
    CustButton:
        text: "Stress Management"
        pos_hint: {"center_x": .5, "center_y":.3}
    CustButton:
        text: "Stop Smoking"
        pos_hint: {"center_x": .5, "center_y":.5}
    CustButton:
        text: "Weight Loss"
        pos_hint: {"center_x": .5, "center_y":.7}
    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "home"
            app.root.transition = SlideTransition(direction='down')

<SettingsPage>:
    name: "settings"
    background_color: 0,0,0,
    CustLabel:
        text: "Add Daily Medications"
        pos_hint: {"center_x": .5, "center_y":.9}
    ScrollView:
        size_hint: .9, .7
        pos_hint: {"center_x": .5, "center_y": .5}
        do_scroll_x: False
        width: 480
        FloatLayout:
            size_hint: None, None
            width: 480
            height: 2000
            CustTextInput:
                hint_text: 'Enter Description'
                pos_hint: {"center_x": .3, "center_y":.98}
                font_size: 25
                size_hint: .6, .025
                multiline: False
            CustSpinner:
                pos_hint: {"center_x": .7, "center_y": 0.98}
                size_hint: .15,.025
                text: "Time"
                background_color: .502, .651, .671, 1
                values: ('1:00', '2:00', '3:00', '4:00','5:00', '6:00', '7:00', '8:00', '9:00', '10:00', '11:00', '12:00')
                font_name:'images/cambriab'
            CustCheckBox:
                size_hint: 0.05, 0.015
                pos_hint: {"center_x": .815, "center_y": 0.98}
                group: 'ampm'
                allow_no_selection: False
                canvas.before:
                    Color:
                        rgb: .2, .2, .2
                    Rectangle:
                        pos: self.pos
                        size: self.size
            CustCheckBox:
                size_hint: 0.05, 0.015
                pos_hint: {"center_x": .87, "center_y": 0.98}
                group: 'ampm'
                allow_no_selection: False
                canvas.before:
                    Color:
                        rgb: .2, .2, .2
                    Rectangle:
                        pos: self.pos
                        size: self.size
            #CustLabel:
            #   pos_hint: {"center_x": .895, "center_y": 0.85}
            #    font_size: 16
            #    text: "AM"
            #CustLabel:
            #    pos_hint: {"center_x": .96, "center_y": 0.85}
            #    font_size: 16
            #    text: "PM"
    CustButton:
        id: add_button
        text: "+"
        size_hint: .1,.065
        pos_hint: {"center_x": .9, "center_y": 0.05}
        on_release:
            #root.yPos -= 0.1
            root.addMedication()
    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "home"
            app.root.transition = SlideTransition(direction='down')



<PhysicalActivities>:
    name: "phys"
    CustButton:
        #font_size: 20
        text: "General Exercise \nInformation"
        pos_hint: {"center_x": .5, "center_y": .3}
        on_release:
            root.PhysicalActivity()
    CustButton:
        text: "Exercise Near Me"
        pos_hint: {"center_x": .5, "center_y": .6}
        on_release:
            app.root.current = "exerClasses"
    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "home"
            app.root.transition = SlideTransition(direction='down')

<ExerciseClasses>:
    name: "exerClasses"
    CustButton:
        text: "Water Aerobics"
        pos_hint: {"center_x": .5, "center_y": .6}
        on_release:
            root.waterAerobics()
    CustButton:
        text: "Tennis"
        pos_hint: {"center_x": .5, "center_y": .9}
        on_release:
            root.tennisClass()
    CustButton:
        text: "Swimming"
        pos_hint: {"center_x": .5, "center_y": .3}
        on_release:
            root.swimmingPools()
    CustButton:
        text: "Back"
        size_hint: .3,.1
        pos_hint: {"x": 0,"y": 0}
        on_release:
            app.root.current = "phys"
            app.root.transition = SlideTransition(direction='down')

<StepTrack>:
    name: "step"
    CustLabel:
        font_size: 24
        text: "In order to maintain good health,\n you should walk at least 15 minutes each \nday to prevent cardiovascular disease."
        halign: 'center'
        pos_hint: {"center_x": .5, "center_y": .8}
    CustTextInput:
        hint_text: 'Enter time walked today (min)'
        pos_hint: {"center_x": .5, "center_y":.3}
        font_size: 25
        size_hint: .75, .055
        multiline: False